    <div id="content" class="span12">
        <div class="alert alert-success">
            <button data-dismiss="alert" class="close" type="button">×</button>
            <h4>Success</h4>
            Game (Test Demo) has been created.
        </div>
        <!-- start list of games section -->
        <div class="row-fluid">
            <div class="block">
                <div class="navbar navbar-inner block-header">
                    <h5>Active games</h5>
                </div>
                <div class="block-content collapse in">
                    <div class="span12">
                        <table id="list-of-games" class="table table-striped table-bordered dataTable">
                            <thead>
                                <tr>
                                    <td>Name</td>
                                    <td>Created</td>
                                    <td>Description</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Test demo 1</td>
                                    <td>11 October 2013, 07:34 UTC</td>
                                    <td>Test demo 1 description</td>
                                </tr>
                                <tr>
                                    <td>Test demo 2</td>
                                    <td>11 October 2013, 07:34 UTC</td>
                                    <td>Test demo 2 description</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="block">
                <div class="navbar navbar-inner block-header">
                    <h5>Expired games</h5>
                </div>
                <div class="block-content collapse in">
                </div>
            </div>
        </div>
        <!-- end list of games section -->
        <!-- start create new game section -->
        <div class="row-fluid">
            <div class="block">
                <div class="navbar navbar-inner block-header">
                    <h5>Create a new game</h5>
                </div>
                <div class="block-content collapse in">
                    <h6>You can starting invite estimators after you have created the game</h6>
                    <div class="block">
                        <div class="navbar navbar-inner block-header"><h6>Details Information</h6></div>
                        <div class="block-content collapse in">
                            <div class="span12">
                                <form class="form-horizontal">
                                    <fieldset>
                                        <div class="control-group">
                                            <label for="name" class="control-label">Name</label>
                                            <div class="controls">
                                                <input type="text" value="This is name..." id="name" class="input-xlarge focused">
                                            </div>
                                        </div>
                                        <div class="control-group">
                                            <label for="description" class="control-label">Description</label>
                                            <div class="controls">
                                                <input type="text" value="This is description..." id="description" class="input-xlarge focused">
                                            </div>
                                        </div>
                                        <div class="form-actions">
                                            <button class="btn btn-primary" type="submit">Create game</button>
                                            <button class="btn" type="reset">Cancel</button>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end create new game section -->
    </div>
</div>